// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Drawer {
  id            String   @id
  size          String
  title         String
  name          String?
  positions     String
  isRightSection Boolean
  keywords      String
  spacing       Int
}

model PrinterConfig {
  id              String   @id @default("default")
  cupsServer      String
  queueName       String
  virtualPrinting Boolean  @default(false)
  updatedAt       DateTime @updatedAt
}
